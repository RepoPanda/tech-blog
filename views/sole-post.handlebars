<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.post_title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.date_created}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>
</div>