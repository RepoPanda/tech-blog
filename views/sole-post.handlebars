<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.post_title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.date_created}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.comments}}
  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-body">
      {{#each post.comments}}
      <div>
        <p>
          {{comment}}
        </p>
        <p>
          &mdash; {{User.username}}, {{format_date date_created}}
        </p>
      </div>
      {{/each}}
    </div>
  </section>
  {{/if}}

  <form id="comment-form-new" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" id="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment:</label>

      <textarea id="body-comment" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comments.js"></script>