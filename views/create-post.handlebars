<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="create-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="create-post-title" class="form-input" id="create-post-title" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="create-post-content" class="form-input" id="create-post-content"></textarea>

    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/js/create.js"></script>